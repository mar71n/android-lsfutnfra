<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="utn.curso.mar71n.ejcalculadora.MainECActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/bt7"
        android:layout_above="@+id/bt4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/bt8"
        android:layout_alignTop="@+id/bt7"
        android:layout_toRightOf="@+id/bt7"
        android:layout_toEndOf="@+id/bt7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/bt9"
        android:layout_alignTop="@+id/bt8"
        android:layout_toRightOf="@+id/bt2"
        android:layout_toEndOf="@+id/bt2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/bt4"
        android:layout_alignTop="@+id/bt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/bt5"
        android:layout_toRightOf="@+id/bt4"
        android:layout_toEndOf="@+id/bt4"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/bt6"
        android:layout_alignTop="@+id/bt5"
        android:layout_alignLeft="@+id/bt9"
        android:layout_alignStart="@+id/bt9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/bt2"
        android:layout_alignTop="@+id/bt1"
        android:layout_alignLeft="@+id/bt5"
        android:layout_alignStart="@+id/bt5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/bt1"
        android:layout_below="@+id/bt4"
        android:layout_toLeftOf="@+id/bt2"
        android:layout_toStartOf="@+id/bt2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btigual"
        android:layout_alignTop="@+id/bt0"
        android:layout_toRightOf="@+id/bt0"
        android:layout_toEndOf="@+id/bt0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/bt0"
        android:layout_alignLeft="@+id/bt2"
        android:layout_alignStart="@+id/bt2"
        android:layout_below="@+id/bt1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btmul"
        android:layout_alignTop="@+id/btsus"
        android:layout_alignLeft="@+id/btigual"
        android:layout_alignStart="@+id/btigual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/btdiv"
        android:layout_above="@+id/btad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textViewDisplay"
        android:layout_above="@+id/bt7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textColor="@android:color/background_dark"
        android:text="0"
        android:id="@+id/textViewCalcu"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btad"
        android:maxWidth="25dp"
        android:layout_below="@+id/bt0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btsus"
        android:layout_alignTop="@+id/btad"
        android:layout_toRightOf="@+id/btad"
        android:layout_toEndOf="@+id/btad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/bt3"
        android:layout_below="@+id/bt6"
        android:layout_alignLeft="@+id/bt6"
        android:layout_alignStart="@+id/bt6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btC"
        android:layout_below="@+id/btmul"
        android:layout_toRightOf="@+id/btad"
        android:layout_toEndOf="@+id/btad" />

</RelativeLayout>
