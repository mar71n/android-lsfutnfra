<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/informacion"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIVELES" />

            <RadioGroup
                android:id="@+id/rdId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nivel 01"
                    android:id="@+id/radioButtonN1"
                    android:checked="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/img_1" />

                    <TextView
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="En este nivel las imágenes se muestran durante 3 segundos"
                        android:id="@+id/textView" />
                </LinearLayout>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nivel 02"
                    android:id="@+id/radioButtonN2"
                    android:checked="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/img_1" />

                    <TextView
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="En este nivel las imágenes se muestran durante 5 segundos"
                        android:id="@+id/textView2" />
                </LinearLayout>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nivel 03"
                    android:id="@+id/radioButtonN3"
                    android:checked="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/img_1" />

                    <TextView
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="En este nivel las imágenes se muestran durante 10 segundos"
                        android:id="@+id/textView3" />
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>